<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:padding="8dp"
                android:text="@string/ticket_code" />

            <TextView
                android:id="@+id/ticket_code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/label_1"
                android:background="@drawable/summary_fields"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="8dp"
                android:text="392039302930" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:padding="8dp"
                android:text="@string/amount" />

            <TextView
                android:id="@+id/amount_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/label_2"
                android:background="@drawable/summary_fields"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="8dp"
                android:text="10,000 fcfa" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:padding="8dp"
                android:text="@string/datetime_time" />

            <TextView
                android:id="@+id/issued_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/label_4"
                android:background="@drawable/summary_fields"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="8dp"
                android:text="650 303 030" />

        </RelativeLayout>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:id="@+id/time_stamp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.11.2022 20:01:00"
            android:textSize="12sp"
            android:padding="8dp"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/summary_fields"
            android:layout_gravity="end"
            android:layout_marginBottom="6dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>